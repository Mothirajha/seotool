<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="login-fields">
		<div class="field">
		  <div><%= f.label :email %><br />
		  <%= f.email_field :email, autofocus: true, id: "email", class: "login" %></div>
		</div>
		<div class="field">
		  <div><%= f.label :password %><br />
		    <%= f.password_field :password, autocomplete: "off", id: "password", class: "login" %></div>
		</div>
		<div class="field">
		  <div><%= f.label :password_confirmation %><br />
		    <%= f.password_field :password_confirmation, autocomplete: "off", id: "confirm_password", class: "login" %></div>
		</div>
	</div>
	<div class="login-actions">
	  <div><%= f.submit "Sign up", class: "button btn btn-primary btn-large" %></div>
  </div>
<% end %>
<%= render "users/shared/links" %>